{
  "name": "emoji-commit-tiny",
  "displayName": "Emoji Commit Tiny",
  "description": "Add emoji to git commit message",
  "publisher": "MerBleueAviation",
  "repository": {
    "type": "git",
    "url": "https://github.com/hks2002/emoji-commit.git"
  },
  "license": "MIT",
  "version": "0.0.1",
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish --yarn",
    "release": "semantic-release"
  },
  "dependencies": {
    "@types/lodash": "^4.14.177",
    "dayjs": "^1.10.7",
    "i18next": "^22.4.9"
  },
  "comment": "[prettier,eslint-plugin-prettier,eslint-config-prettier][husky,semantic-release,@commitlint/config-conventional,@semantic-release/changelog,@semantic-release/git]",
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "2.17.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "glob": "^8.0.3",
    "husky": "^8.0.2",
    "mocha": "^10.1.0",
    "prettier": "^2.5.1",
    "semantic-release": "^20.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "emoji",
    "lint",
    "commit"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "emoji-commit-tiny.emojiCommit",
        "title": "git emoji commit",
        "icon": {
          "dark": "images/icon.svg",
          "light": "images/icon_light.svg"
        }
      }
    ],
    "menus": {
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "emoji-commit-tiny.emojiCommit",
          "group": "navigation"
        }
      ]
    },
    "configuration": [
      {
        "title": "Emoji Commit",
        "properties": {
          "emoji-commit-tiny.emojiPosition": {
            "order": 1,
            "type": "string",
            "default": "suffix",
            "enum": [
              "prefix",
              "middle",
              "suffix",
              "none"
            ],
            "description": "%emoji-commit.emojiPosition%"
          },
          "emoji-commit-tiny.emojis": {
            "order": 3,
            "type": "object",
            "default": {
              "feat": "✨",
              "fix": "🐛",
              "docs": "📚",
              "style": "💎",
              "refactor": "📦",
              "perf": "🚀",
              "test": "🚨",
              "build": "🛠",
              "ci": "⚙️",
              "chore": "♻️",
              "revert": "🗑"
            },
            "properties": {
              "feat": {
                "type": "string",
                "default": "✨"
              },
              "fix": {
                "type": "string",
                "default": "🐛"
              },
              "docs": {
                "type": "string",
                "default": "📚"
              },
              "style": {
                "type": "string",
                "default": "💎"
              },
              "refactor": {
                "type": "string",
                "default": "📦"
              },
              "perf": {
                "type": "string",
                "default": "🚀"
              },
              "test": {
                "type": "string",
                "default": "🚨"
              },
              "build": {
                "type": "string",
                "default": "🛠"
              },
              "ci": {
                "type": "string",
                "default": "⚙️"
              },
              "chore": {
                "type": "string",
                "default": "♻️"
              },
              "revert": {
                "type": "string",
                "default": "🗑"
              }
            },
            "additionalProperties": false,
            "markdownDescription": "%emoji-commit-tiny.emojis%"
          },
          "emoji-commit-tiny.additionalType": {
            "order": 4,
            "type": "array",
            "default": [
              {
                "type": "init",
                "emoji": "🎉",
                "name": "初始化",
                "description": "初次提交/初始化项目"
              },
              {
                "type": "release",
                "emoji": "🎉",
                "name": "发布",
                "description": "发布版本"
              },
              {
                "type": "publish",
                "emoji": "🎉",
                "name": "新版本",
                "description": "发布新版本"
              },
              {
                "type": "tag",
                "emoji": "🎉",
                "name": "标签",
                "description": "发布版本/添加标签"
              }
            ],
            "additionalProperties": true,
            "markdownDescription": "%emoji-commit.additionalTypes%"
          }
        }
      }
    ]
  }
}
